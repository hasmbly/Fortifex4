@namespace Fortifex4.WebUI.Shared.Common

@attribute [Authorize]

@inject IAuthenticationService _authenticationService
@inject IMembersService _membersService
@inject ICountriesService _countriesService
@inject ITimeFramesService _timeFramesService
@inject ICurrenciesService _currenciesService
@inject GlobalState _globalState

@inject NavigationManager _navigationManager

<header>
    <div>
    </div>
    <div>
        <div class="form-inline">
            <div class="form-group">
                <label for="timeframe-options">Time Frame:</label>
                <select id="timeframe-options" class="form-control-sm" @bind="SelectedTimeFrame">
                    @foreach (var timeFrame in Model.TimeFrames)
                    {
                        <option value="@timeFrame.TimeFrameID">@timeFrame.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="fiat-options">Pref. Fiat:</label>
                <select id="fiat-options" class="form-control-sm" @bind="SelectedFiatCurrency">
                    @foreach (var fiatCurrency in Model.FiatCurrency)
                    {
                        <option value="@fiatCurrency.CurrencyID">@fiatCurrency.NameWithSymbol</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="coin-options">Pref. Crypto:</label>
                <select id="coin-options" class="form-control-sm" @bind="SelectedCoinCurrency">
                    @foreach (var coinCurrency in Model.CoinCurrency)
                    {
                        <option value="@coinCurrency.CurrencyID">@coinCurrency.NameWithSymbol</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div>
        <form class="form-inline">
            <div class="col-sm-8 text-right">
                @if (IsLoading)
                {<i class="fas fa-circle-notch fa-spin"></i>}
            </div>
        </form>
    </div>
    <div>
        <form action="#" class="form-inline">
            <button type="button" class="btn btn-outline-light" @onclick="LogoutAsync">Logout</button>
        </form>
    </div>
</header>