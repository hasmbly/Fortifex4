@namespace Fortifex4.WebUI.Shared.Common.Modal
@attribute [Authorize]

@inject IInternalTransfersService _internalTransfersService
@inject IWalletsService _walletsService

@inject NavigationManager _navigationManager

<BaseModal @ref="BaseModal"
           ModalTitle="@Title"
           IsLoading="IsLoading"
           OnSubmit="OnSubmitEditInternalTransferAsync"
           IsOpenWithID="LoadDataAsync">
    <ChildContent>
        <EditForm Model="Input" OnValidSubmit="OnSubmitEditInternalTransferAsync">
            <DataAnnotationsValidator />
            <div class="form-row">
                <div class="form-group col-4">
                    <label>From Wallet</label>
                    <InputText @bind-Value="Wallet.FromWalletName" class="form-control" disabled />
                </div>
                <div class="form-group col-4">
                    <label>To Wallet</label>
                    <InputText @bind-Value="Wallet.ToWalletName" class="form-control" disabled />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-4">
                    <label>Currency</label>
                    <InputText @bind-Value="Wallet.CurrencyName" class="form-control" disabled />
                </div>
                <div class="form-group col-4">
                    <label>Amount</label>
                    <InputNumber @bind-Value="Input.Amount" class="form-control" />
                    <ValidationMessage For="@(() => Input.Amount)" />
                </div>
                <div class="form-group col-4">
                    <label>Date & Time</label>
                    <input @bind="Input.TransactionDateTime" class="form-control" type="datetime-local" step="1" />
                    <ValidationMessage For="@(() => Input.TransactionDateTime)" />
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </EditForm>
    </ChildContent>
</BaseModal>