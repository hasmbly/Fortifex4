@namespace Fortifex4.WebUI.Shared.Layouts
@inherits LayoutComponentBase

@inject IJSRuntime JsRuntime

<Animate Animation="Animations.FadeIn" Duration="TimeSpan.FromSeconds(0.5)" Delay="TimeSpan.FromSeconds(0.3)">
    <div class="outer">
        <AuthorizeView>
            <NavMenu />
        </AuthorizeView>
        <div class="main-container">
            <AuthorizeView>
                <TopBar />
            </AuthorizeView>

            <main role="main">
                @Body
            </main>
        </div>
    </div>
</Animate>

@code
{
    // FINALLY.... after few days, this is the unpredictable SOLUTION for Bug: JsRuntime Won't Initialize ToggleCheckbox (@_@)
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("Toggle.init");
        }
    }
}