@page "/myprofile"
@attribute [Authorize]

@inject IAuthenticationService _authenticationService
@inject NavigationManager _navigationManager
@inject HttpClient _httpClient
@inject AuthenticationStateProvider _authenticationStateProvider

<PageTitle Title="My Profile" />

<h1>My Profile</h1>
<div class="text-right mb-3">
    <a href="/myprofile/edit" class="btn btn-primary mb-3">Edit Profile</a>
</div>
<dl class="row">
    <dt class="col-sm-2">Username</dt>
    <dd class="col-sm-10">@Member.MemberUsername</dd>
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Member.FirstName</dd>
    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Member.LastName</dd>
    <dt class="col-sm-2">Birth Date</dt>
    <dd class="col-sm-10">@Member.BirthDateDisplayText</dd>
    <dt class="col-sm-2">Gender</dt>
    <dd class="col-sm-10">@Member.GenderName</dd>
    <dt class="col-sm-2">Country</dt>
    <dd class="col-sm-10">@Member.CountryName</dd>
    <dt class="col-sm-2">Region</dt>
    <dd class="col-sm-10">@Member.RegionName</dd>
</dl>